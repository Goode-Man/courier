<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <EditText
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:id="@+id/popup_edit"
        android:hint="快递单号"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/popup_left1"
        android:text="导航"
        android:textSize="16dp"
        android:gravity="center_horizontal|center_vertical"
        android:background="@drawable/popup_left"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/popup_middle1"
        android:text="揽件"
        android:textSize="16dp"
        android:gravity="center_horizontal|center_vertical"
        android:background="@drawable/popup_middle"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/popup_right1"
        android:text="取消"
        android:textSize="16dp"
        android:gravity="center_horizontal|center_vertical"
        android:background="@drawable/popup_right"/>
</LinearLayout>

</LinearLayout>