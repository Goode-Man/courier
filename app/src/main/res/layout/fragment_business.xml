<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.machenike.courier.BusinessFragment">

    <LinearLayout
        style="@style/layout_full"
        android:background="#ffffff"
        android:orientation="vertical">

    <LinearLayout
    style="@style/layout_full"
    android:orientation="vertical"
    android:layout_weight="10"
    android:background="#1670b5"
    >
        <TextView
            style="@style/layout_full"
            android:layout_weight="20"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textSize="22dp"
            android:layout_marginTop="5dp"
            android:text="业务"/>
        <EditText
            style="@style/layout_full"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:drawableLeft="@drawable/searchs"
            android:id="@+id/edit_searchs"
            android:background="#ffffff"
            android:hint="搜索"
            android:layout_height="44dp" />
        <LinearLayout
            style="@style/layout_full"
            android:orientation="horizontal"
            android:layout_weight="10"
            android:layout_marginTop="25dp"
            >
    <LinearLayout
        style="@style/layout_full"
        android:layout_weight="1"
        android:layout_marginTop="3dp"
        android:orientation="vertical">
        <ImageView
            style="@style/layout_wrap"
            android:id="@+id/btn_saoma"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/saoma"/>
        <TextView
            style="@style/layout_wrap"
            android:layout_below="@id/btn_saoma"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:layout_marginTop="2dp"
            android:text="扫码"/>
    </LinearLayout>
    <LinearLayout
        style="@style/layout_full"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:orientation="vertical">
        <ImageView
            style="@style/layout_wrap"
            android:id="@+id/btn_duanxin"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/duanxin"/>
        <TextView
            style="@style/layout_wrap"
            android:layout_gravity="center_horizontal"
            android:layout_below="@id/btn_duanxin"
            android:layout_marginTop="4dp"
            android:textColor="#ffffff"
            android:text="短信"/>
    </LinearLayout>
            </LinearLayout>
        </LinearLayout>
<GridView
    style="@style/layout_full"
    android:layout_weight="5"
    android:numColumns="3"
    android:id="@+id/Business_gridView"></GridView>

</LinearLayout>
</FrameLayout>
